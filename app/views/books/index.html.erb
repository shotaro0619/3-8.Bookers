<h1>Books</h1>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>body</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
    <tr>
      <td><%= book.title %></td>
      <td><%= book.body %></td>
      <td class="link">
          <%= link_to "Show", book_path(book) %>
          <%= link_to "Edit", edit_book_path(book) %>
          <%= link_to "Destroy",book_path(book), method: :delete, "data-confirm" => "Are you sure?" %>
       </td>

      <% end %>

    </tr>
  </tbody>
</table>

    <h2>New book</h2>
  <%= form_with model:@book, local:true do |f| %>

    <label>Title</label>
    <div class="field">
      <%= f.text_field :title %>
    </div>

    <label>Body</label>
    <div class="field">
      <%= f.text_area :body %>
    </div>

    <div class="action">
      <%= f.submit 'Create Book' %>
    </div>
  <% end %>