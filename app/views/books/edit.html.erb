<h1>Editing Book</h1>
<%if @book.errors.any? %>
    <div class="error_explanation">
      <h2><%= @book.errors.count %>&nbsp;error prohibited this book from being saved: </h2>
        <ul class="error-list">
           <% @book.errors.full_messages.each do |msg| %>
               <li><%= msg %></li>
           <% end %>
        </ul>
    </div>
  <% end %>
<%= form_with model:@book, local: true do |f| %>
  <label>Title</label>
  <div class="field"><%= f.text_field :title %></div>
  <label>Body</label>
  <div class="field"><%= f.text_area :body %></div>
  <div class="action"><%= f.submit 'Update Book' %></div>
<% end %>
<div><%= link_to "Show", book_path(@book) %>
     |
     <%= link_to "Back", "/books" %>
</div>